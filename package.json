{
  "name": "scroll-here-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "clean": "rimraf dist/http-request-cache",
    "start:app": "wait-on dist/http-request-cache/fesm2015 && ng serve --poll 2000",
    "watch:lib": "ng build http-request-cache --watch",
    "watch:all": "npm run clean && npm-run-all watch:lib start:app",
    "scroll:prod": "cd projects/scroll-here && npm --no-git-tag-version version patch && ng build scroll-here --prod",
    "scroll:publish": "cd dist/scroll-here && npm publish --access=public",
    "validators:prod": "cd projects/validators && npm --no-git-tag-version version patch && ng build validators --prod",
    "validators:publish": "cd dist/validators && npm publish --access=public",
    "base-components:prod": "cd projects/base-components && npm --no-git-tag-version version patch && ng build base-components --prod",
    "base-components:publish": "cd dist/base-components && npm publish --access=public",
    "http-request-cache:prod": "cd projects/http-request-cache && npm --no-git-tag-version version patch && ng build http-request-cache --prod",
    "http-request-cache:publish": "cd dist/http-request-cache && npm publish --access=public"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.6",
    "@angular/cdk": "^11.2.11",
    "@angular/common": "~11.2.6",
    "@angular/compiler": "~11.2.6",
    "@angular/core": "~11.2.6",
    "@angular/forms": "~11.2.6",
    "@angular/material": "^11.2.11",
    "@angular/platform-browser": "~11.2.6",
    "@angular/platform-browser-dynamic": "~11.2.6",
    "@angular/router": "~11.2.6",
    "ngx-page-scroll-core": "^7.0.4",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.5",
    "@angular/cli": "~11.2.5",
    "@angular/compiler-cli": "~11.2.6",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "rimraf": "^3.0.2",
    "run-p": "*",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.5",
    "wait-on": "^5.3.0"
  }
}
